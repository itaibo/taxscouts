{
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "compilerOptions": {
    "target": "es2016",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./src/*"],
    },
    "types": ["node", "jest"],
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
}
